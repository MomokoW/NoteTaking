<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.notes.notetaking">

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <receiver android:name="com.example.notes.notetaking.Manager.datepicker.AlarmReceiver">
            <intent-filter>
                <action android:name="MYALARMRECEIVER" />
            </intent-filter>
        </receiver>


        <activity android:name=".Activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.NewAlarmActivity" ></activity>
        <activity android:name=".Activity.AddNotesActivity" ></activity>
        <activity android:name=".Activity.LoginActivity" ></activity>
        <activity android:name=".Activity.RegisterActivity" ></activity>
        <activity android:name=".Activity.UpdateInformationActivity" ></activity>
        <activity android:name=".Activity.ModifyAlarmActivity"></activity>
        <activity android:name=".Activity.AlarmAlertActivity"></activity>


    </application>

</manifest>