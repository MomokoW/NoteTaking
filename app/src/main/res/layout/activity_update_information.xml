<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/skin1"
    android:orientation="vertical"
    tools:context=".Activity.UpdateInformationActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        >
    <TextView
        android:id="@+id/headChangeButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="注册个人信息"
        />

    <EditText
        android:id="@+id/nameChangeEdit"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:hint="请输入昵称"
        android:background="@drawable/edit_shape"
        android:inputType="text"
        />
    <Space
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="0.5"
        />

    <EditText
        android:id="@+id/passwordOldEdit"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:inputType="textPassword"
        android:background="@drawable/edit_shape"
        android:hint="请输入原密码"
        />
    <Space
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="0.5"
        />



    <EditText
        android:id="@+id/passwordNew1Edit"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:inputType="textPassword"
        android:background="@drawable/edit_shape"
        android:layout_weight="1"
        android:ems="10"
        android:hint="请输入新密码" />
    <Space
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="0.5"
        />
    <EditText
        android:id="@+id/passwordNew2Edit"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:background="@drawable/edit_shape"
        android:hint="请再次输入新密码"
        android:inputType="text"
        />
    <Space
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        />
                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:orientation="horizontal"
                >
                <Button
                    android:id="@+id/updateInforBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:text="确定"
                    android:background="@drawable/btn_shape"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical">
        </LinearLayout>

</android.support.constraint.ConstraintLayout>