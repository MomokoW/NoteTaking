<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.RegisterActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        >


        <EditText
            android:id="@+id/idInput_register"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:hint="请输入帐号"
            android:inputType="text"
            />
        <Space
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="0.5"
            />

        <EditText
            android:id="@+id/passwordInput1_register"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:inputType="textPassword"
            android:hint="请输入密码"
            />
        <Space
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="0.5"
            />



        <EditText
            android:id="@+id/passwordInput2_register"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:inputType="textPassword"
            android:ems="10"
            android:hint="请再次输入密码" />
        <Space
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="0.5"
            />
        <EditText
            android:id="@+id/nameInput_register"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:hint="请输入昵称"
            android:inputType="text"
            />
        <Space
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="0.5"
            />
        <LinearLayout
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Space
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="0.5"/>
            <Button
                android:id="@+id/sureButton_register"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:background="#00bfff"
                android:text="确定"
                />
            <Space
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="0.5"/>
            <Button
                android:id="@+id/backButton_register"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:text="取消"
                android:background="#00bfff"
                />
            <Space
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="0.5"/>
        </LinearLayout>
    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>